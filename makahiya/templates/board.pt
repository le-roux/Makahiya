<metal:macro use-macro="master">
    <metal:slot fill-slot="body">
        <div class="container-fluid">
            <h1 class="sub-header" text-align="center">${title}</h1>
            <h2 class="sub-header">LED HP</h2>
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th>LED ID</th>
                        <th>Activated</th>
                        <th tal:repeat="color ('R', 'G', 'B', 'W')">
                            ${color}
                        </th>
                        <th>Send</th>
                    </tr>
                    <tr>
                        <form method="post" action='/${plant_id}/board'>
                            <td>Led 1</td>
                            <td>
                                <input tal:condition='ledH_state'
                                    type='checkbox' name='ledH_state' checked/>
                                <input tal:condition='ledH_state == False'
                                    type='checkbox' name='ledH_state'/>
                            </td>
                            <td><input type='text' value=${ledHP_R} name='ledH_R'/></td>
                            <td><input type='text' value=${ledHP_G} name='ledH_G'/></td>
                            <td><input type='text' value=${ledHP_B} name='ledH_B'/></td>
                            <td><input type='text' value=${ledHP_W} name='ledH_W'/></td>
                            <td><input type='submit' value="Send"/></td>
                        </form>
                    </tr>
                </table>

                <h2 class="sub-header">LED M</h2>
                <table class="table table-striped">
                    <tr>
                        <th>LED ID</th>
                        <th>Activated</th>
                        <th>Color</th>
                        <th>Send</th>
                    <tr>
                    <form tal:repeat="id ran" method='post' action='/${plant_id}/board'>
                        <tr>
                            <td>
                                LED ${id}
                            </td>
                            <td tal:define="name string:state_ledM$id">
                                <input tal:condition='ledM_state[repeat.id.index]'
                                    type='checkbox' name=${name} placeholder='' checked/>
                                <input tal:condition='ledM_state[repeat.id.index] == False'
                                    type='checkbox' name=${name} placeholder=''/>
                            </td>
                            <td>
                                <input tal:define="name string:color_ledM$id"
                                    type='color'
                                    value=${ledM[repeat.id.index]}
                                    name=${name}
                                    placeholder=''/>
                            </td>
                            <td>
                                <input type='submit' value='Send'/>
                            </td>
                        </tr>
                    </form>
                </table>
            </div>
        </div>
    </metal:slot>
</metal:macro>
