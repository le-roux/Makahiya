<metal:macro use-macro="master">
    <metal:slot fill-slot="body">
        <div class="container-fluid">
            <h1 class="sub-header text-center">
                ${title}
                <div tal:condition="python:KeyError == 1 | nothing" style='color:red'>
                    Error when sending data to plant
                </div>
            </h1>
            <div class="table-responsive">
                <h2 class="sub-header">LED HP</h2>
                <table class="table table-striped">
                    <tr>
                        <th>LED ID</th>
                        <th tal:repeat="color ('R', 'G', 'B', 'W')">
                            ${color}
                        </th>
                        <th>Send</th>
                    </tr>
                    <tr>
                        <form method="post" action='/${plant_id}/board/leds'>
                            <td>Led 1</td>
                            <td><input type='text' value=${ledHP_R} name='ledH_R'/></td>
                            <td><input type='text' value=${ledHP_G} name='ledH_G'/></td>
                            <td><input type='text' value=${ledHP_B} name='ledH_B'/></td>
                            <td><input type='text' value=${ledHP_W} name='ledH_W'/></td>
                            <td><input type='submit' value="Send"/></td>
                        </form>
                    </tr>
                </table>

                <h2 class="sub-header">LED M</h2>
                <table class="table table-striped">
                    <tr>
                        <th>LED ID</th>
                        <div tal:repeat="color ('R', 'G', 'B')">
                            <th>${color}</th>
                        </div>
                        <th>Send</th>
                    <tr>
                    <form tal:repeat="id ran" method='post' action='/${plant_id}/board/leds'>
                        <tr>
                            <td>
                                LED ${id}
                            </td>
                            <td tal:repeat="color ('R', 'G', 'B')">
                                <input tal:define="name string:ledM$id$color"
                                    type='text'
                                    value=${ledM[repeat.id.index][repeat.color.index]}
                                    name=${name}
                                    placeholder=''/>
                            </td>
                            <td>
                                <input type='submit' value='Send'/>
                            </td>
                        </tr>
                    </form>
                </table>
            </div>
        </div>
    </metal:slot>
</metal:macro>
